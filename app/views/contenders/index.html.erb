<h2>Listing contenders</h2>

<table id="rankings">
  <thead>
  <tr>
    <th>Headshot</th>
    <!-- <th>Uname</th> -->
    <th>Name</th>
    <th>Wins</th>
    <th>Loses</th>
    <th>Ratio</th>
    <!-- <th>Banner</th> -->
    <!-- <th></th>
    <th></th>
    <th></th> -->
  </tr>
  </thead>
  
  <tbody>
<% @contenders.each do |contender| %>
  <tr>
    <td><%= image_tag contender.headshot, :width => '75' %></td>
    <!-- <td><%= contender.uname %></td> -->
    <td><%= contender.fullname %></td>
    <td><%= contender.wins %></td>
    <td><%= contender.loses %></td>
    <td><%= sprintf( "%0.02f", contender.ratio ) %></td>
    <!-- <td><%= image_tag contender.banner, :width => '400' %></td> -->
    <!-- <td><%= link_to 'Show', contender %></td>
        <td><%= link_to 'Edit', edit_contender_path(contender) %></td>
        <td><%= link_to 'Destroy', contender, confirm: 'Are you sure?', method: :delete %></td> -->
  </tr>
<% end %>
  </tbody>
</table>

<script>
$(function() {
    $("table#rankings").tablesorter(
      { 
        sortList: [[4,1]],
        headers: {
          0: { sorter: false }
        }
      }
    );
});
</script>